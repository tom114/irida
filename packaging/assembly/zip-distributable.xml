<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
	<id>bin</id>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.build.directory}</directory>
			<outputDirectory>${file.separator}</outputDirectory>
			<includes>
				<include>*.war</include>
			</includes>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>${basedir}/packaging/README.md</source>
			<destName>README.md</destName>
		</file>
		<file>
			<source>${basedir}/CHANGELOG.md</source>
			<destName>CHANGELOG.md</destName>
		</file>
		<file>
			<source>${basedir}/UPGRADING.md</source>
			<destName>UPGRADING.md</destName>
		</file>
		<file>
			<source>${basedir}/LICENSE</source>
			<destName>LICENSE</destName>
		</file>
		<file>
			<source>${project.build.directory}/tools-list.yml</source>
			<destName>tools-list.yml</destName>
		</file>
	</files>
</assembly>
